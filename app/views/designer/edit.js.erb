(function() {

  $('#modal-content').html('<%= escape_javascript(render partial: "#{@form}/form") %>');

  var reload;
  reload = function () {
    // reload resource functions after Modal is opened
    prepareResourceFunctions();
    // prepareDesignerFunctions();

    var form = document.querySelectorAll('form');
    form[0].setAttribute('data-remote', 'true');
    var submit = document.querySelector("div.submit-button input");
    active = document.querySelectorAll(".active_field");
    active[0].focus();
    active[0].select();
  };

  $(document).ready(reload);
  // $(document).on('page:load', ready);

}).call(this);
